            <Button Name="hoverButton9_2" Content="Button9-2" Width="200" Height="54" Margin="20"
                    Style="{StaticResource HoverButtonStyleKey9_2}" />
            <Button Name="hoverButton10" Content="Button10" Width="200" Height="54" Margin="20"
                    Style="{StaticResource HoverButtonStyleKey10}" />
            <Button Name="hoverButton11" Content="Button11" Width="200" Height="54" Margin="20"
                    Style="{StaticResource HoverButtonStyleKey11}" />
            <Button Name="hoverButton12" Content="Button12(未実装)" Width="200" Height="54" Margin="20"
                    Style="{StaticResource HoverButtonStyleKey12}" />
        </WrapPanel>
    </Grid>
</Window>